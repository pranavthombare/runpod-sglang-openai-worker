FROM nvidia/cuda:12.4.1-cudnn-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-pip python3-venv python3-dev build-essential git curl ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt ./
RUN python3 -m pip install --no-cache-dir -r requirements.txt

# Install sglang and CUDA-enabled torch; consider pinning versions per your cluster
RUN python3 -m pip install --no-cache-dir "sglang[all]" torch --extra-index-url https://download.pytorch.org/whl/cu124

COPY handler.py sglang_client.py start.sh ./
RUN chmod +x start.sh

# Qwen3 480B A35B FP8 preset
ENV SGLANG_PORT=30000 \
    MODEL_PATH="Qwen/Qwen3-480B-A35B-Instruct-FP8" \
    SGLANG_EXTRA_ARGS="--tp 8 --enable-ep-moe --context-length 262144 --trust-remote-code" \
    SGLANG_HEALTH_TIMEOUT=600 \
    SGLANG_HEALTH_INTERVAL=2 \
    SGLANG_TIMEOUT=600

EXPOSE 30000
CMD ["./start.sh"]
